  <DefaultOAuthAuthenticator StayAuthenticated="true" TokenName="access_token" AuthUrl=" https://oauth.yandex.com/authorize?response_type=token&amp;client_id=32cb22bd3ab948ef8d47dd2713ec62b5"/>

  <Resources>
    <Resource Id="Fail">
