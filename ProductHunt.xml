			<JsonPath Expr="posts.*">
				<JsonPath Expr="id" Id="Id" Title="Id" Converter="Long" HelpText=""/>
				<JsonPath Expr="slug" Id="Slug" Title="Slug" Converter="String" HelpText=""/>
