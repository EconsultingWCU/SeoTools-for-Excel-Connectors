<?xml version="1.0" encoding="utf-8" ?>
<Suite Title="IP2Country" Id="IP2Country" SourceUrl="https://github.com/nielsbosma/SeoTools-for-Excel-Connectors/blob/master/IP2Country.xml" HelpUrl="http://seotoolsforexcel.com/IP2Country/" HelpText="Documentation">

  <Author Name="Victor" Url="http://community.seotoolsforexcel.com/users/diskborste/activity"/>

  <RestConnector Id="IP2Country" Title="IP2Country">
    <Parameters>
      <Text Id="IPAdress" Title="IP Adress" Debug.DefaultValue="78.71.249.251" Required="true"/>
    </Parameters>
    <Fetch>
      <Fetch.Url>
      <![CDATA[
			https://api.ip2country.info/ip?
		  @Utils.UrlEncode(Model.IPAdress)
      ]]>
      </Fetch.Url>
		<HttpSettings>
			<IntervalBetweenRequests RandomFrom="0" RandomTo="0" IfSame="Host"/>
		</HttpSettings>
    </Fetch>
    <Parse>
			<JsonPath Expr="countryCode" Id="CountryCode" Title="Country Code" Converter="String"/>
			<JsonPath Expr="countryName" Id="CountryName" Title="Country Name" Converter="String"/>
    </Parse>
  </RestConnector>

</Suite>