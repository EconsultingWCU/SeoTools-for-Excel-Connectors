<?xml version="1.0" encoding="utf-8" ?>
<Suite Category="Domains" RequireVersion="7.0.0" Title="Domains Database Search" Id="DomainsDbSearch" SourceUrl="https://github.com/nielsbosma/SeoTools-for-Excel-Connectors/blob/master/DomainsDbSearch.xml" HelpUrl="http://seotoolsforexcel.com/domains-db-search/" HelpText="Documentation">

  <Author Name="Victor" Url="http://community.seotoolsforexcel.com/users/diskborste/activity"/>

  <RestConnector Id="DomainsDbSearch" Title="Domains Database Search" HelpUrl="https://domainsdb.info/">
    <Parameters>
      <Text Id="Query" Title="Query" Debug.DefaultValue="facebook" Required="true"/>
			<Select Id="Database">
				<DataSource>
					<Item Id="all" Title="All"/>
					<Item Id="cc" Title="ccTLD Domains"/>
					<Item Id="g" Title="gTLD Domains"/>
				</DataSource>
			</Select>
    </Parameters>
    <Fetch>
      <HttpSettings>
        <Cache>True</Cache>
      </HttpSettings>
      <Fetch.Url>
        <![CDATA[
        https://api.domainsdb.info/search?query=@(Model.Query)&tld=@(Model.Database)
        ]]>
      </Fetch.Url>
    </Fetch>
    <Parse>
			<JsonPath Expr="domains.*">
				<JsonPath Expr="domain" Id="Domain" Converter="String" DefaultValue=""/>
				<JsonPath Expr="suffix" Id="Suffix" Converter="String" DefaultValue="" Checked="false"/>
				<JsonPath Expr="country" Id="Country" Converter="String" DefaultValue="" Checked="false"/>
				<JsonPath Expr="create_date" Id="Created" Converter="Auto" DefaultValue="" Checked="false"/>
				<JsonPath Expr="update_date" Id="Updated" Converter="Auto" DefaultValue="" Checked="false"/>
				<JsonPath Expr="expire_date" Id="Expires" Converter="Auto" DefaultValue="" Checked="false"/>
				<JsonPath Expr="A[0]" Id="Ip" Converter="String" DefaultValue="" Checked="false"/>
				<JsonPath Expr="TXT[0]" Id="TX" Converter="String" DefaultValue="" Checked="false"/>
				<Compute Id="NS" Converter="Auto" DefaultValue="" Checked="false">
					<Compute.Expr>
						<![CDATA[@Regex.Replace(Model.Inp, @"[""\[\]\r\n]", "")]]>
					</Compute.Expr>
					<JsonPath Expr="NS" Id="Inp" DefaultValue=""/>
				</Compute>
				<JsonPath Expr="MX[0]" Id="MX" Converter="String" DefaultValue="" Checked="false"/>
				<JsonPath Expr="is_dead" Id="Dead" Converter="Bool" DefaultValue="" Checked="false"/>
				<JsonPath Expr="resolvable" Id="Resolvable" Converter="Bool" DefaultValue="" Checked="false"/>
			</JsonPath>
			<JsonPath Expr="total" Id="Total" Converter="Long" DefaultValue=""/>
    </Parse>
    <Fail>
      <JsonPath Expr="error"/>
    </Fail>
  </RestConnector>

</Suite>