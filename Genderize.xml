<?xml version="1.0" encoding="utf-8" ?>
<Suite Title="Genderize" Identifier="Genderize" RequireVersion="8.1.2" Category="Demographics" SourceUrl="https://github.com/nielsbosma/SeoTools-for-Excel-Connectors/blob/master/Genderize.xml" HelpUrl="http://seotoolsforexcel.com/genderize/" HelpText="Documentation">

  <Author Name="Victor" Url="http://community.seotoolsforexcel.com/users/diskborste/activity"/>

  <RestConnector Title="Genderize" Id="Genderize" HelpText="Genderize.io determines the gender of a first name.">
    <Parameters>
      <Text Id="Name" Title="Name" Required="true" Debug.DefaultValue="michelle"/>
      <Select Id="Country" Title="Country" DefaultValue="all">
        <DataSource>
					<Item Id="all" Title="All"/>
          <ISOCountryCodes/>
        </DataSource>
      </Select>
      <Select Id="Language" Title="Language" DefaultValue="all">
        <DataSource>
					<Item Id="all" Title="All"/>
          <ISOLanguageCodes/>
        </DataSource>
      </Select>
    </Parameters>
		<Fetch>
      <Fetch.Url>
        <![CDATA[
          https://api.genderize.io/?name=@Utils.UrlEncode(Model.Name)
          @(Model.Country != "all" ? "&country_id=" + Model.Country : "")
          @(Model.Language != "all" ? "&language_id=" + Model.Language : "")
        ]]>
      </Fetch.Url>
    </Fetch>
    <Parse>
			<JsonPath Expr="gender" Id="Gender" DefaultValue=""/>
			<JsonPath Expr="probability" Id="Probability" Converter="Double" DefaultValue="" Checked="false"/>
			<JsonPath Expr="count" Id="Count" Converter="Auto" DefaultValue="" Checked="false"/>
    </Parse>
  </RestConnector>

</Suite>