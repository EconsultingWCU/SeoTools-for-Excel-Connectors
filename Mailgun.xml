<?xml version="1.0" encoding="utf-8" ?>
<Suite Title="Mailgun" Id="Mailgun" Category="Email" RequireVersion="8.2" SourceUrl="https://github.com/nielsbosma/SeoTools-for-Excel-Connectors/blob/master/Mailgun.xml" HelpUrl="http://seotoolsforexcel.com/mailgun" HelpText="Documentation">

  <Author Name="Victor Sandberg" Url="http://community.seotoolsforexcel.com/users/diskborste/activity" />

  <Settings HelpText="What's this?" HelpUrl="http://seotoolsforexcel.com/mailgun/">
    <Text Id="PrivateKey" Title="Private Key" Required="true" HelpUrl="http://seotoolsforexcel.com/mailgun"/>
    <Text Id="ValidationKey" Title="Validation Key" Required="true" HelpUrl="http://seotoolsforexcel.com/mailgun"/>
  </Settings>

	<Resources>	
    <Resource Id="HttpSettings">
      <HttpSettings>
        <RequestHeaders>
          <Header Name='Authorization'>Basic @(CreateBasicAuth(Model.ValidationKey))</Header>
        </RequestHeaders>
      </HttpSettings>
    </Resource>
		<Resource Id="Fail">
			<Fail>
				<JsonPath Expr="message"/>
			</Fail>
    </Resource>
  </Resources>

  <RestConnector Id="ValidateEmail" Title="Validate" HelpUrl="https://documentation.mailgun.com/en/latest/api-email-validation.html#email-validation">
    <Parameters>
      <Text Id="Email" Title="Email Address" Debug.DefaultValue="info@seotoolsforexcel.com" Required="true"/>
      <Checkbox Id="MailboxVerification" Title="Mailbox Verification"/>
		</Parameters>
    <Fetch>
			<Resource Id="HttpSettings"/>
      <Fetch.Url>
        <![CDATA[
          https://api.mailgun.net/v3/address/validate
					?address=@(Utils.UrlEncode(Model.Email))
					&mailbox_verification=@(Model.MailboxVerification ? "true" : "false")
        ]]>
      </Fetch.Url>
    </Fetch>
    <Parse>
      <JsonPath Expr="is_valid" Id="Valid" Title="Valid" Converter="Bool" HelpText="Runs the email segments across a valid known provider rule list. If a violation occurs this value is false"/>
      <JsonPath Expr="address" Id="Address" Title="Address" Converter="String" Checked="false" HelpText="Email address being validated"/>
      <JsonPath Expr="parts.display_name" Id="DisplayName" Title="Display Name" Converter="String" DefaultValue="" Checked="false" HelpText="The Display Name segment of the provided email address"/>
      <JsonPath Expr="parts.domain" Id="Domain" Title="Domain" Converter="String" Checked="false" HelpText="The Domain segment of the provided email address"/>
      <JsonPath Expr="parts.local_part" Id="LocalPart" Title="Local" Converter="String" DefaultValue="" Checked="false" HelpText="The Local Part segment of the provided email address"/>
      <JsonPath Expr="did_you_mean" Id="DidYouMean" Title="Did You Mean" Converter="String" DefaultValue="" Checked="false" HelpText="If a potential typo is made, the closest suggestion is provided"/>
      <JsonPath Expr="is_disposable_address" Id="Disposable" Title="Disposable" Converter="Bool" Checked="false" HelpText="If the domain is in a list of disposable email addresses"/>
      <JsonPath Expr="is_role_address" Id="RoleAddress" Title="Role Address" Converter="Bool" Checked="false" HelpText="Checks the mailbox portion of the email if it matches a specific role type"/>
      <JsonPath Expr="mailbox_verification" Id="MailboxVerification" Title="Mailbox Verification" Converter="Bool" Checked="false" HelpText="If the mail_verification flag is enabled, a call is made to the ESP to return existence."/>
    </Parse>
		<Resource Id="Fail"/>
  </RestConnector>

  <RestConnector Id="Domains List" Title="List Domains" Group="Domains" HelpText="Returns a list of domains under your account." HelpUrl="https://documentation.mailgun.com/en/latest/api-domains.html#example">
    <Paging PageSize="100" EvenPages="true"/>
    <Fetch>
			<Resource Id="HttpSettings"/>
      <Fetch.Url>
        <![CDATA[
          https://api.mailgun.net/v3/domains
					?limit=@(Model.PageCursor.NextTake)
					&skip=@(Model.PageCursor.NextSkip)
        ]]>
      </Fetch.Url>
    </Fetch>
    <Parse>
			<JsonPath Expr="items.*">
				<JsonPath Expr="id" Id="Id" Title="Id" Converter="String"/>
				<JsonPath Expr="name" Id="Name" Title="Name" Converter="String"/>
				<JsonPath Expr="created_at" Id="Created" Title="Created" Converter="DateTime"/>
				<JsonPath Expr="smtp_login" Id="SMTPLogin" Title="SMTP Login" Converter="String"/>
				<JsonPath Expr="smtp_password" Id="SMTPPassword" Title="SMTP Password" Converter="String"/>
				<JsonPath Expr="state" Id="State" Title="State" Converter="String"/>
				<JsonPath Expr="type" Id="Type" Title="Type" Converter="String"/>
				<JsonPath Expr="spam_action" Id="SpamAction" Title="Spam Action" Converter="String"/>
				<JsonPath Expr="require_tls" Id="RequireTLS" Title="Require TLS" Converter="Bool"/>
				<JsonPath Expr="skip_verification" Id="SkipVerification" Title="Skip Verification" Converter="Bool"/>
			</JsonPath>
    </Parse>
		<Resource Id="Fail"/>
  </RestConnector>

  <RestConnector Id="DomainsLookup" Title="Lookup Domain" Group="Domains" HelpText="Returns a single domain under your account." HelpUrl="https://documentation.mailgun.com/en/latest/api-domains.html#example">
    <Parameters>
      <Text Id="Domain" Title="Domain Name" Debug.DefaultValue="sandboxaaae8b7d75a44a88b090e9f32a9cb103.mailgun.org" Required="true"/>
		</Parameters>
    <Fetch>
			<Resource Id="HttpSettings"/>
      <Fetch.Url>
        <![CDATA[
          https://api.mailgun.net/v3/domains/@Utils.UrlEncode(Model.Domain)
        ]]>
      </Fetch.Url>
    </Fetch>
    <Parse>
			<JsonPath Expr="domain">
				<JsonPath Expr="id" Id="Id" Title="Id" Converter="String"/>
				<JsonPath Expr="name" Id="Name" Title="Name" Converter="String"/>
				<JsonPath Expr="created_at" Id="Created" Title="Created" Converter="DateTime"/>
				<JsonPath Expr="smtp_login" Id="SMTPLogin" Title="SMTP Login" Converter="String"/>
				<JsonPath Expr="smtp_password" Id="SMTPPassword" Title="SMTP Password" Converter="String"/>
				<JsonPath Expr="state" Id="State" Title="State" Converter="String"/>
				<JsonPath Expr="type" Id="Type" Title="Type" Converter="String"/>
				<JsonPath Expr="spam_action" Id="SpamAction" Title="Spam Action" Converter="String"/>
				<JsonPath Expr="require_tls" Id="RequireTLS" Title="Require TLS" Converter="Bool"/>
				<JsonPath Expr="skip_verification" Id="SkipVerification" Title="Skip Verification" Converter="Bool"/>
			</JsonPath>
    </Parse>
		<Resource Id="Fail"/>
  </RestConnector>

  <RestConnector Id="DomainSMTPCredentials" Title="SMTP Credentials" Group="Domains" HelpText="Returns a list of SMTP credentials for the defined domain." HelpUrl="https://documentation.mailgun.com/en/latest/api-domains.html#example">
    <Parameters>
      <Text Id="Domain" Title="Domain Name" Debug.DefaultValue="sandboxaaae8b7d75a44a88b090e9f32a9cb103.mailgun.org" Required="true"/>
		</Parameters>
    <Fetch>
			<Resource Id="HttpSettings"/>
      <Fetch.Url>
        <![CDATA[
          https://api.mailgun.net/v3/domains/@Utils.UrlEncode(Model.Domain)/credentials
        ]]>
      </Fetch.Url>
    </Fetch>
    <Parse>
			<JsonPath Expr="items.*">
				<JsonPath Expr="login" Id="Login" Title="Login" Converter="String"/>
				<JsonPath Expr="mailbox" Id="Mailbox" Title="Mailbox" Converter="String"/>
				<JsonPath Expr="created_at" Id="Created" Title="Created" Converter="DateTime"/>
			</JsonPath>
    </Parse>
		<Resource Id="Fail"/>
  </RestConnector>

  <RestConnector Id="DomainConnectionSettings" Title="Connection Settings" Group="Domains" HelpText="Returns delivery connection settings for the defined domain." HelpUrl="https://documentation.mailgun.com/en/latest/api-domains.html#example">
    <Parameters>
      <Text Id="Domain" Title="Domain Name" Debug.DefaultValue="sandboxaaae8b7d75a44a88b090e9f32a9cb103.mailgun.org" Required="true"/>
		</Parameters>
    <Fetch>
			<Resource Id="HttpSettings"/>
      <Fetch.Url>
        <![CDATA[
          https://api.mailgun.net/v3/domains/@Utils.UrlEncode(Model.Domain)/connection
        ]]>
      </Fetch.Url>
    </Fetch>
    <Parse>
			<JsonPath Expr="connection.require_tls" Id="RequireTLS" Title="Require TLS" Converter="String"/>
			<JsonPath Expr="connection.skip_verification" Id="SkipVerification" Title="Skip Verification" Converter="String"/>
    </Parse>
		<Resource Id="Fail"/>
  </RestConnector>

  <RestConnector Id="DomainTrackingSettings" Title="Tracking Settings" Group="Domains" HelpText="Returns tracking settings for a domain." HelpUrl="https://documentation.mailgun.com/en/latest/api-domains.html#example">
    <Parameters>
      <Text Id="Domain" Title="Domain Name" Debug.DefaultValue="sandboxaaae8b7d75a44a88b090e9f32a9cb103.mailgun.org" Required="true"/>
		</Parameters>
    <Fetch>
			<Resource Id="HttpSettings"/>
      <Fetch.Url>
        <![CDATA[
          https://api.mailgun.net/v3/domains/@Utils.UrlEncode(Model.Domain)/tracking
        ]]>
      </Fetch.Url>
    </Fetch>
    <Parse>
			<JsonPath Expr="tracking.click.active" Id="ClickActive" Title="Click Active" Converter="Bool"/>
			<JsonPath Expr="tracking.open.active" Id="OpenActive" Title="Open Active" Converter="Bool"/>
			<JsonPath Expr="tracking.unsubscribe.active" Id="UnsubscribeActive" Title="Unsubscribe Active" Converter="Bool"/>
			<JsonPath Expr="tracking.unsubscribe.html_footer" Id="UnsubscribeHtmlFooter" Title="Unsubscribe HTML Footer" Converter="String"/>
			<JsonPath Expr="tracking.unsubscribe.text_footer" Id="UnsubscribeTextFooter" Title="Unsubscribe Text Footer" Converter="String"/>
    </Parse>
		<Resource Id="Fail"/>
  </RestConnector>

  <RestConnector Id="IPsList" Title="IPs List" Group="IP Addresses" HelpText="Returns a list of IPs assigned to your account." HelpUrl="https://documentation.mailgun.com/en/latest/api-ips.html#ips">
    <Parameters>
      <Checkbox Id="Dedicated" Title="Dedicated Only"/>
		</Parameters>
    <Fetch>
			<Resource Id="HttpSettings"/>
      <Fetch.Url>
        <![CDATA[
          https://api.mailgun.net/v3/ips
					?dedicated=@(Model.Dedicated)
        ]]>
      </Fetch.Url>
    </Fetch>
    <Parse>
			<JsonPath Expr="items.*">
				<JsonPath Expr="." Id="IPs" Title="IPs" Converter="String"/>
			</JsonPath>
    </Parse>
		<Resource Id="Fail"/>
  </RestConnector>

  <RestConnector Id="IPsLookup" Title="Lookup IPs" Group="IP Addresses" HelpText="Returns information about the specified IP." HelpUrl="https://documentation.mailgun.com/en/latest/api-ips.html#ips">
    <Parameters>
      <Text Id="IP" Title="IP Address" Debug.DefaultValue="104.130.122.30" Required="true"/>
		</Parameters>
    <Fetch>
			<Resource Id="HttpSettings"/>
      <Fetch.Url>
        <![CDATA[
          https://api.mailgun.net/v3/ips/@(Model.IP)
        ]]>
      </Fetch.Url>
    </Fetch>
    <Parse>
			<JsonPath Expr="ip" Id="IP" Title="IP" Converter="String"/>
			<JsonPath Expr="rdns" Id="RDNS" Title="RDNS" Converter="String"/>
			<JsonPath Expr="dedicated" Id="Dedicated" Title="Dedicated" Converter="Bool"/>
    </Parse>
		<Resource Id="Fail"/>
  </RestConnector>

  <RestConnector Id="IPsInDomain" Title="IPs Assigned to Domain" Group="IP Addresses" HelpText="Returns a list of IPs currently assigned to the specified domain." HelpUrl="https://documentation.mailgun.com/en/latest/api-ips.html#ips">
    <Parameters>
      <Text Id="Domain" Title="Domain Name" Debug.DefaultValue="sandboxaaae8b7d75a44a88b090e9f32a9cb103.mailgun.org" Required="true"/>
		</Parameters>
    <Fetch>
			<Resource Id="HttpSettings"/>
      <Fetch.Url>
        <![CDATA[
          https://api.mailgun.net/v3/domains/@Utils.UrlEncode(Model.Domain)/ips
        ]]>
      </Fetch.Url>
    </Fetch>
    <Parse>
			<JsonPath Expr="items.*">
				<JsonPath Expr="." Id="IPs" Title="IPs" Converter="String"/>
			</JsonPath>
    </Parse>
		<Resource Id="Fail"/>
  </RestConnector>

  <RestConnector Id="MailingLists" Title="Mailing Lists" Group="Lists" HelpUrl="https://documentation.mailgun.com/en/latest/api-mailinglists.html#mailing-lists">
    <Parameters>
      <Number Id="MaxResults" Title="Max Results" DefaultValue="100" Minimum="1"/>
		</Parameters>
    <Fetch>
			<Resource Id="HttpSettings"/>
      <Fetch.Url>
        <![CDATA[
          https://api.mailgun.net/v3/lists/pages
					?limit=@(Model.MaxResults)
        ]]>
      </Fetch.Url>
    </Fetch>
    <Parse>
			<JsonPath Expr="items.*">
				<JsonPath Expr="address" Id="Address" Title="Address" Converter="String"/>
				<JsonPath Expr="name" Id="Name" Title="Name" Converter="String"/>
				<JsonPath Expr="created_at" Id="Created" Title="Created" Converter="DateTime"/>
				<JsonPath Expr="description" Id="Description" Title="Description" Converter="String"/>
				<JsonPath Expr="access_level" Id="AccessLevel" Title="Access Level" Converter="String"/>
				<JsonPath Expr="members_count" Id="Members" Title="Members" Converter="Long"/>
			</JsonPath>
    </Parse>
		<Resource Id="Fail"/>
  </RestConnector>

  <RestConnector Id="MailingListsMembers" Title="Mailing Lists Members" Group="Lists" HelpText="Returns members in the given mailing list" HelpUrl="https://documentation.mailgun.com/en/latest/api-mailinglists.html#mailing-lists">
    <Parameters>
      <Text Id="List" Title="Mailing List Address" Debug.DefaultValue="diskborste@sandboxaaae8b7d75a44a88b090e9f32a9cb103.mailgun.org" Required="true"/>
      <Number Id="MaxResults" Title="Max Results" DefaultValue="100" Minimum="1"/>
		</Parameters>
    <Fetch>
			<Resource Id="HttpSettings"/>
      <Fetch.Url>
        <![CDATA[
          https://api.mailgun.net/v3/lists/@Utils.UrlEncode(Model.List)/members/pages
					?limit=@(Model.MaxResults)
        ]]>
      </Fetch.Url>
    </Fetch>
    <Parse>
			<JsonPath Expr="items.*">
				<JsonPath Expr="address" Id="Address" Title="Address" Converter="String"/>
				<JsonPath Expr="name" Id="Name" Title="Name" Converter="String"/>
				<JsonPath Expr="subscribed" Id="Subscribed" Title="Subscribed" Converter="Bool"/>
			</JsonPath>
    </Parse>
		<Resource Id="Fail"/>
  </RestConnector>

  <RazorFunctions>
    <![CDATA[
    string CreateBasicAuth(string key) {
      return Convert.ToBase64String(ASCIIEncoding.ASCII.GetBytes("api" + ":" + key));
    }
    ]]>
  </RazorFunctions>
	
</Suite>