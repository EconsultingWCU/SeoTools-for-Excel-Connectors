      </JsonPath>
      <JsonPath Expr="$.*">
        <Compute Id="Url" Title="URL">
          <Compute.Expr>
						<![CDATA[
            https://www.twitter.com/@(Model.Username)/statuses/@(Model.Id)/
						]]>
          </Compute.Expr>
