  <RestConnector Id="NumberOfResults" Title="Number of Results" AvailableInSpider="false" >
    <Parameters>
      <Text Id="Query" Title="Query" Required="true"/>
    </Parameters>
    <Fetch Url="http://www.bing.com/search?q=@Utils.UrlEncode(Model.Query)">
      <HttpSettings>
        <IntervalBetweenRequests RandomFrom="500" RandomTo="1500" IfSame="Host"/>
      </HttpSettings>
    </Fetch>
    <Parse>
      <Regex Expr="&quot;sb_count&quot;&gt;\s*([\d\?\-]+\s*[\S]+\s*)?([0-9,\. &amp;#;]+)[^&lt;]*&lt;/span&gt;" IgnoreCase="true" DefaultValue="0" Converter="Int"/>
    </Parse>
  </RestConnector>

